<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    controllerName="br.com.gestao.fioriappreport234.controller.DataBinding"
    displayBlock="true"
>
    <Shell id="shell">
        <!-- <App id="app"> -->
        <!-- <pages> -->
        <Page
            id="page"
            title="{i18n>title}"
        >
            <content>
                <Panel
                    width="auto"
                    expand="true"
                    id="_IDGenPanel1"
                >
                    <headerToolbar>
                        <Toolbar id="toolbar1">
                            <Title
                                text="Model via Serviço OData"
                                id="headerTitle"
                            />
                            <ToolbarSpacer id="toolbarSpacerID" />
                            <Button
                                id="btnSttings"
                                icon="sap-icon://settings"
                            />
                        </Toolbar>
                    </headerToolbar>

                    <content>
                        <List
                            noDataText="Sem produtos disponíveis"
                            id="list0"
                            items="{/Produtos}"
                        >
                            <items>
                                <StandardListItem
                                    type="Navigation"
                                    title="{Productid}"
                                    description="{Name}"
                                    icon="sap-icon://picture"
                                    id="item0"
                                />
                            </items>
                        </List>
                    </content>

                    <infoToolbar>
                        <Toolbar
                            width="100%"
                            id="toolbar1_1703700543283"
                        >
                            <content>
                                <Text
                                    xmlns="sap.m"
                                    text="Informação Adicional List"
                                    id="text2"
                                />
                            </content>
                        </Toolbar>
                    </infoToolbar>
                </Panel>
                <Panel
                    xmlns="sap.m"
                    width="auto"
                    expandable="true"
                    expanded="true"
                    id="panel0"
                >
                    <headerToolbar>
                        <Toolbar id="toolbar1_1703703520236">
                            <Title
                                id="_IDGenTitle1"
                                text="Model via arquivo JSON"
                            />
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button
                                id="_IDGenButton1"
                                icon="sap-icon://settings"
                            />
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <List
                            noDataText="Drop list items here"
                            id="list0_1703703863708"
                            items="{Model_JSON_Produtos>/Products}"
                        >
                            <items>
                                <StandardListItem
                                    type="Navigation"
                                    title="{Model_JSON_Produtos>ProductName}"
                                    description="{Model_JSON_Produtos>Description}"
                                    icon="sap-icon://picture"
                                    id="item1"
                                />
                            </items>
                        </List>
                    </content>
                </Panel>
                <Panel
                    xmlns="sap.m"
                    width="auto"
                    expandable="true"
                    expanded="true"
                    id="panel0_1703946608572"
                >
                    <headerToolbar>
                        <Toolbar id="toolbar1_1703946608572">
                            <Title
                                id="_IDGenTitle2"
                                text="Header"
                            />
                            <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                            <Button
                                id="_IDGenButton2"
                                icon="sap-icon://settings"
                            />
                        </Toolbar>
                    </headerToolbar>
                    <content>
                        <form:SimpleForm
                            xmlns:sap.ui.core="sap.ui.core"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            id="form_regions"
                        >
                            <form:content>
                                <sap.ui.core:Title
                                    text="Binding Element"
                                    id="title1"
                                />

                                <Label
                                    text="Nome da Região"
                                    id="label0"
                                />
                                <Input
                                    width="100%"
                                    id="input0"
                                    value="{Model_JSON_Regions>name}"
                                />

                                <Label
                                    text="Nome Companhia"
                                    id="label3"
                                />
                                <Input
                                    width="100%"
                                    id="input3"
                                    value="{Model_JSON_Regions>companies/2/name}"
                                />

                                <Label
                                    text="Cidade / Pais"
                                    id="label1"
                                />
                                <Input
                                    width="100%"
                                    id="input2"
                                    value="{Model_JSON_Regions>companies/2/city} / {Model_JSON_Regions>companies/2/county}"
                                />

                                <Label
                                    text="Acessar Regiões"
                                    width="100%"
                                    id="label2"
                                />
                                <Button
                                    xmlns="sap.m"
                                    text="Binding Element Regions"
                                    press="getRegion"
                                    id="button1"
                                    icon="sap-icon://add"
                                />
                            </form:content>
                        </form:SimpleForm>
                    </content>
                </Panel>
            </content>
        </Page>
        <!-- </pages> -->
        <!-- </App> -->
    </Shell>
</mvc:View>
